  "shortcuts": [
    {
      "name": "产品浏览",
      "short_name": "产品",
      "description": "浏览产品目录",
      "url": "/products",
      "icons": [
        {
          "src": "/icons/product-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "订单管理",
      "short_name": "订单",
      "description": "查看和管理订单",
      "url": "/orders",
      "icons": [
        {
          "src": "/icons/order-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "询价中心",
      "short_name": "询价",
      "description": "创建和管理询价",
      "url": "/inquiries",
      "icons": [
        {
          "src": "/icons/inquiry-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "数据报表",
      "short_name": "报表",
      "description": "查看业务报表",
      "url": "/admin/reports",
      "icons": [
        {
          "src": "/icons/report-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "categories": ["business", "productivity", "finance"],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "桌面端主界面"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "移动端主界面"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+b2b",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": [".csv", ".xlsx", ".json"]
        }
      ]
    }
  }
}